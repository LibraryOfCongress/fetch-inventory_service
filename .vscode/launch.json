    "version": "0.2.0",
    "configurations": [
        {
            "name": "Python: FastAPI",
            "type": "python",
            "request": "launch",
            "module": "uvicorn",
            "args": [
                "app.main:app",
                "--reload",
                "--port",
                "8001"
            ],
            "pythonArgs": ["-Xfrozen_modules=off"],
            "jinja": true,
            "justMyCode": true,
            "env": {
              "PYDEVD_DISABLE_FILE_VALIDATION": "1",
              "APP_ENVIRONMENT": "debug",
              "DATABASE_URL": "postgresql://postgres:postgres@localhost:5432/inventory_service"
            }
        }
    ]
}
